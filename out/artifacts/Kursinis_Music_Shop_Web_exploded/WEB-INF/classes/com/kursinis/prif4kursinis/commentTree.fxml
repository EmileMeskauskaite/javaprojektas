<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kursinis.prif4kursinis.fxControllers.CommentTree">
    <children>
        <TreeView fx:id="commentsTree" layoutX="347.0" layoutY="15.0" prefHeight="337.0" prefWidth="219.0">
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#deleteComment" text="Delete" />
                        <MenuItem mnemonicParsing="false" onAction="#reply" text="Reply" />
                    </items>
                </ContextMenu>
            </contextMenu>
        </TreeView>
        <ListView fx:id="productList" layoutX="14.0" layoutY="48.0" onMouseClicked="#loadComments" prefHeight="337.0" prefWidth="219.0">
         <contextMenu>
            <ContextMenu>
              <items>
                <MenuItem mnemonicParsing="false" onAction="#loadResponseForm" text="Add review" />
              </items>
            </ContextMenu>
         </contextMenu></ListView>
        <Button fx:id="createCommentButton" layoutX="448.0" layoutY="360.0" onAction="#createComment" text="Create Comment" />
      <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#goBack" text="Back" />    </children>
</AnchorPane>
